                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6">
                <div class="support-location-img">
                    <img src="@Url.Content("~/Content/assets/img/service/support-img.jpg")" alt="">
                    <div class="support-img-cap text-center">
                        <p>Since</p>
                        <span>1999</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
