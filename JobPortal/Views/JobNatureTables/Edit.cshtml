@model DatabaseLayer.JobNatureTable

@{
    ViewBag.Title = "Edit";
}

<div class="section-top-border">
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <h3 class="mb-30">Edit job nature </h3>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.JobNatureID)

                    <div class="mt-4">

                        @Html.EditorFor(model => model.JobNature, new
                        {
                            htmlAttributes = new
                   {
                       @class = "form-control single-input",
                       @type = "text",
                       @name = "first_name",
                       @placeholder = " Enter job nature",
                       @onfocus = "this.placeholder = ''",
                       @onblur = "this.placeholder = 'First Job Nature'",
                       @required = "true"
                   }
                   })
                        @Html.ValidationMessageFor(model => model.JobNature, "", new { @class = "text-danger" })

                    </div>
                    <hr />
                    <div class="form-group mt-4">

                        <input type="submit" value="Update" class="genric-btn primary e-large" style="float:right;" />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default", @style = "float:left;" })

                    </div>
                </div>
            }

            <div>

            </div>
        </div>
    </div>
</div>